@model IEnumerable<ABC_Retail2.Models.CustomerEntity>
@{
    ViewData["Title"] = "Customers";
}
<h2>Customers</h2>
<p><a href="/Customers/Create">Add Customer</a></p>
<table class="table">
    <thead><tr><th>Name</th><th>Email</th><th>Phone</th><th>Address</th><th></th></tr></thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.FullName</td>
                <td>@c.Email</td>
                <td>@c.Phone</td>
                <td>@c.Address</td>
                <td><a href="/Customers/Delete?id=@c.RowKey" class="btn btn-sm btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
